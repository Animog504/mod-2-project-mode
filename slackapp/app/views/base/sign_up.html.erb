<!-- Default form register -->
<form class="text-center border border-light p-5" action="/user/" method = POST>

    <p class="h4 mb-4">Sign up</p>

    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
            <input type="text" id="defaultRegisterFormFirstName" class="form-control" placeholder="Full name" name = "full_name">
        </div>
        <div class="col">
            <!-- Last name -->
            <input type="text" id="defaultRegisterFormLastName" class="form-control" placeholder="Display name" name = "display_name">
        </div>
    </div>

    <!-- E-mail -->
    <input type="text" id="defaultRegisterFormEmail" class="form-control mb-4" placeholder="Bio" name = "bio">

    <!-- Password -->
    <input type="password" id="defaultRegisterFormPassword" class="form-control" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock" name = "password">
    <small id="defaultRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4" >
        At least 8 characters and 1 digit
    </small>


 <!-- Age -->
    <div class="form-group">
    <label for="exampleFormControlSelect1">Age</label>
    <select class="form-control" id="exampleFormControlSelect1" name = "age">
        <%number = 0%>
        <%100.times do %>
            <option><%=number%></option>
            <%number += 1%>
        <%end%>
    </select>
  </div>
    

    <!-- Sign up button -->
    <button class="btn btn-info my-4 btn-block" type="submit">Sign in</button>

    <hr>


    <!-- Terms of service -->
    <p>By clicking
        <em>Sign up</em> you agree to our
        <a href="" target="_blank">terms of service</a>

</form>
<!-- Default form register -->