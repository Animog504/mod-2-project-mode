<head>
  <title>All Posts</title>
  <style>
    a{
       text-decoration: none;
    }
    .title{
      grid-column: 2;
      grid-row: 1;
      text-align: center;
      color: blue;
        }
    .big{
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }
    .main{
      grid-column: 2;
      grid-row: 2;
      text-align: center;
    }
    .each {
      grid-column: 2;
      grid-row: 2;
    }
  </style>
</head>
<body>
<div class = "big">
  <div class = "title">
    <h2>Browse Channels</h2>
  </div>
  <div class = "main">
    <% @posts.each do |post| %>
      <div class = "each">
        <a class = "button" href = "/posts/<%=post%>"><%=post%></a>
      </div>
      <br>
    <% end %>
  </div>
</div>
</body>
